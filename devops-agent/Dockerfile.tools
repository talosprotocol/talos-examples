FROM python:3.11-slim

WORKDIR /app

# Simple direct install for dependencies to avoid complex requirements files
# we need boto3, fastapi, uvicorn, requests
RUN pip install --no-cache-dir boto3 fastapi uvicorn requests httpx

# install local SDK
COPY deploy/repos/talos-sdk-py /tmp/talos-sdk-py
RUN pip install /tmp/talos-sdk-py

# Copy the mcp_tools package
COPY deploy/repos/talos-examples/devops-agent/mcp_tools/ /app/mcp_tools/

ENV PYTHONPATH=/app

CMD ["uvicorn", "mcp_tools.server:app", "--host", "0.0.0.0", "--port", "8000"]
