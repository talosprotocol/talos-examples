FROM python:3.11-slim

WORKDIR /app

# Simple direct install for dependencies to avoid complex requirements files
# we need boto3, fastapi, uvicorn, requests
RUN pip install --no-cache-dir boto3 fastapi uvicorn requests httpx

# install local SDK
# install local SDK
# install local SDK
# install local SDK
COPY . /app
RUN pip install /app/vendor/talos-sdk-py

ENV PYTHONPATH=/app

CMD ["uvicorn", "mcp_tools.server:app", "--host", "0.0.0.0", "--port", "8000"]
